<html>
    <%- include('./templates/head.ejs', {pageTitle: "Update Profile"}) %>
    <body>
        <%- include('./templates/navbar.ejs') %>
        <h2>Update Profile</h2>
        <form action="/user/resetpassword" method="post">
            <p>First Name: <input id="firstnameInput" type="text" placeholder="Enter First Name" name="firstname" required></p>
            <p>Last Name: <input id="lastnameInput" type="text" placeholder="Enter Last Name" name="lastname" required></p>
            <p>Quote: <input id="quoteInput" type="text" placeholder="Enter Quote" name="quote" required></p>
            <button type="submit">Update Profile</button>
        </form>
        
        <script src="public/js/showError.js"></script>
        <script src="public/js/updateprofile.js"></script>
    </body>
</html>