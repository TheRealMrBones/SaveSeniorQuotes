<html>
    <%- include('./templates/head.ejs', {pageTitle: "Register"}) %>
    <body>
        <%- include('./templates/navbar.ejs') %>
        <div class="container containermain">
            <h1>Register</h1>
            <form action="/user/register" method="post">
                <input id="usernameInput" class="textinput" type="text" placeholder="Enter Username" name="username" maxlength="20" required>
                <input id="passwordInput" class="textinput" type="password" placeholder="Enter Password" name="password" required>
                <input id="confirmPasswordInput" class="textinput" type="password" placeholder="Confirm Password" name="confirmPassword" required>
                <div><label><input id="remembermeInput" class="checkinput" type="checkbox" name="rememberme"> Remember Me</label></div>
                <button type="submit">Register</button>

                <h2>OR</h2>
                <button id="googlebutton" type="button" class="google-sign-in-button">
                    Sign in with Google
                </button>
            </form>
            
            <script src="public/js/form.js"></script>
            <script src="public/js/sendLogin.js"></script>
            <script src="public/js/register.js"></script>
            <script src="public/js/google.js"></script>
        </div>
    </body>
</html>